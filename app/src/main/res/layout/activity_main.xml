<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chirath.musicplayer.MainActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="241dp"
        android:layout_height="73dp"
        app:srcCompat="@drawable/now_playing"
        android:id="@+id/nowPlaying"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        app:layout_constraintRight_toRightOf="@+id/activity_main" />

    <ImageView
        android:layout_width="255dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/song_title_place_holder"
        android:id="@+id/songTextBackground"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/nowPlaying"
        android:layout_marginTop="54dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main" />

    <TextView
        android:text="TextView"
        android:layout_width="184dp"
        android:layout_height="25dp"
        android:id="@+id/songTitle"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/nowPlaying"
        android:layout_marginTop="80dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.42" />

    <ImageView
        android:layout_width="230dp"
        android:layout_height="224dp"
        app:srcCompat="@drawable/album_art"
        android:id="@+id/albumArt"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/nowPlaying"
        android:layout_marginTop="128dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:text="1:52"
        android:layout_width="43dp"
        android:layout_height="21dp"
        android:id="@+id/currentTime"
        android:textStyle="normal|bold"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="360dp" />

    <TextView
        android:text="3:45"
        android:layout_width="45dp"
        android:layout_height="21dp"
        android:id="@+id/endTime"
        android:textSize="17dp"
        android:textStyle="normal|bold"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="360dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main" />

    <ImageButton
        android:layout_width="91dp"
        android:layout_height="71dp"
        app:srcCompat="@drawable/play_button"
        android:id="@+id/playPause"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/nowPlaying"
        android:layout_marginTop="430dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.52" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="69dp"
        app:srcCompat="@drawable/rewind_button"
        android:id="@+id/previous"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="430dp" />

    <ImageButton
        android:layout_width="91dp"
        android:layout_height="69dp"
        app:srcCompat="@drawable/fast_forward_button"
        android:id="@+id/next"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        app:layout_constraintTop_toTopOf="@+id/nowPlaying"
        android:layout_marginTop="430dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />

    <SeekBar
        android:layout_width="335dp"
        android:layout_height="20dp"
        android:id="@+id/seekBar"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/nowPlaying"
        android:layout_marginTop="392dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

</android.support.constraint.ConstraintLayout>
