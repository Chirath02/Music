<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chirath.musicplayer.MainActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="299dp"
        android:layout_height="88dp"
        app:srcCompat="@drawable/now_playing"
        android:id="@+id/nowPlaying"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        app:layout_constraintRight_toRightOf="@+id/activity_main" />

    <ImageView
        android:layout_width="313dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/song_title_place_holder"
        android:id="@+id/songTextBackground"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/nowPlaying"
        android:layout_marginTop="64dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        app:layout_constraintHorizontal_bias="0.45" />

    <TextView
        android:text="TextView"
        android:layout_width="184dp"
        android:layout_height="25dp"
        android:id="@+id/songTitle"
        android:textSize="20dp"
        android:textColor="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/nowPlaying"
        android:layout_marginTop="88dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.33" />

    <ImageView
        android:layout_width="269dp"
        android:layout_height="264dp"
        app:srcCompat="@drawable/album_art"
        android:id="@+id/albumArt"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/nowPlaying"
        android:layout_marginTop="136dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.47" />

    <TextView
        android:text="1:52"
        android:layout_width="51dp"
        android:layout_height="21dp"
        android:id="@+id/currentTime"
        android:textStyle="normal|bold"
        android:textSize="17dp"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="400dp" />

    <TextView
        android:text="3:45"
        android:layout_width="45dp"
        android:layout_height="21dp"
        android:id="@+id/endTime"
        android:textSize="17dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="400dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main" />

    <ImageButton
        android:layout_width="91dp"
        android:layout_height="71dp"
        app:srcCompat="@drawable/play_button"
        android:id="@+id/playPause"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/nowPlaying"
        android:layout_marginTop="460dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.52" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="69dp"
        app:srcCompat="@drawable/rewind_button"
        android:id="@+id/previous"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="460dp" />

    <ImageButton
        android:layout_width="91dp"
        android:layout_height="69dp"
        app:srcCompat="@drawable/fast_forward_button"
        android:id="@+id/next"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        app:layout_constraintTop_toTopOf="@+id/nowPlaying"
        android:layout_marginTop="460dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />

    <SeekBar
        android:layout_width="335dp"
        android:layout_height="20dp"
        android:id="@+id/seekBar"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/nowPlaying"
        android:layout_marginTop="424dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.59" />

</android.support.constraint.ConstraintLayout>
